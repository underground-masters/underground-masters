         </columns>
      </TableView>

        <!-- 플로팅 + 버튼 -->
        <StackPane layoutX="461.0" layoutY="633.0" prefHeight="58.0" prefWidth="58.0">
   <children>
         <Circle fill="DCDCDC" radius="29.0" />
         <Label onMouseClicked="#onAddTalentClicked" style="-fx-font-size:30px; -fx-text-fill:#4A4A4A;" text="+" />
   </children>
        </StackPane>
      
